# Template for installing packages.
{% from "php/ng/map.jinja" import php with context %}
{% from "php/ng/macro.jinja" import sls_block %}

{% set opts = php.installed.get(state, {}) %}

php_install_{{ state }}:
  pkg.installed:
    {{ sls_block(opts) }}
    - name: {{ php.lookup.pkgs.get(state) }}
